{
  "name": "ai-content-creation-platform",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "node --max-old-space-size=4096 ./node_modules/vite/bin/vite.js --host 0.0.0.0",
    "build": "node --max-old-space-size=4096 ./node_modules/vite/bin/vite.js build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "node --max-old-space-size=8192 ./node_modules/eslint/bin/eslint.js src App.tsx constants.ts types.ts --ext ts,tsx,js,jsx --max-warnings 0",
    "test": "vitest run",
    "test:coverage": "npx vitest run --coverage",
    "snapshot": "node scripts/snapshot.js",
    "snapshot:create": "node scripts/snapshot.js create",
    "snapshot:restore": "node scripts/snapshot.js restore",
    "snapshot:list": "node scripts/snapshot.js list",
    "snapshot:compare": "node scripts/snapshot.js compare",
    "verify:golden": "node scripts/verify-golden.cjs full",
    "verify:pipeline": "node scripts/pipeline-verify.js full",
    "verify:quick": "node scripts/pipeline-verify.js quick",
    "verify:syntax": "node scripts/pipeline-verify.js syntax",
    "verify:e2e": "node scripts/e2e-test.js",
    "pre-commit": "npm run verify:quick",
    "deploy": "node scripts/deploy.js",
    "deploy:production": "node scripts/deploy.js production",
    "deploy:staging": "node scripts/deploy.js staging",
    "deploy:github-pages": "node scripts/deploy.js github-pages",
    "deploy:quick": "node scripts/deploy.js quick production",
    "code-review": "node scripts/codeReviewService.js scan",
    "code-review:fix": "node scripts/codeReviewService.js fix",
    "security-scan": "node scripts/codeReviewService.js scan",
    "security-scan:fix": "node scripts/codeReviewService.js fix",
    "performance-monitor": "node services/performanceMonitorService export",
    "performance-monitor:check": "node services/performanceMonitorService check",
    "performance-monitor:report": "node services/performanceMonitorService report",
    "error-tracking": "node services/errorTrackingService export",
    "error-tracking:stats": "node services/errorTrackingService stats",
    "error-tracking:report": "node services/errorTrackingService report",
    "config": "node services/configManagerService export",
    "config:load": "node services/configManagerService load",
    "config:save": "node services/configManagerService save",
    "dependencies:check": "node scripts/dependencyManagerService check",
    "dependencies:check:outdated": "node scripts/dependencyManagerService checkOutdated",
    "dependencies:check:vulns": "node scripts/dependencyManagerService checkVulns",
    "dependencies:check:report": "node scripts/dependencyManagerService report",
    "dependencies:update": "node scripts/dependencyManagerService updateDependencies",
    "dependencies:clean": "node scripts/dependencyManagerService cleanDependencies",
    "dependencies:install": "node scripts/dependencyManagerService installMissing",
    "test:coverage-skill": "node scripts/test.js coverage",
    "debug:analyze": "node scripts/debug-assistant.js analyze",
    "debug:health": "node scripts/debug-assistant.js health",
    "index:lessons": "node scripts/index-lessons.js",
    "dev:monitor": "node scripts/dev-monitor.js",
    "analyze:impact": "node scripts/impact-analyzer.js",
    "start": "node scripts/task-runner.js",
    "oauth:setup": "node scripts/setup-oauth.js",
    "oauth:server": "cd server && npm start",
    "oauth:dev": "cd server && npm run dev",
    "oauth:dev:full": "npm run oauth:dev & npm run dev",
    "test:perf:smoke": "k6 run performance-tests/backend/scenarios/smoke.test.ts",
    "test:perf:load": "k6 run --vus 50 --duration 5m performance-tests/backend/scenarios/video-generation.test.ts",
    "test:perf:frontend": "playwright test --grep @perf",
    "drill:prep": "node -e \"const fs=require('fs'); ['server/temp_assets', 'server/platform.test.db'].forEach(p => fs.existsSync(p) && fs.rmSync(p, {recursive: true, force: true}))\"",
    "drill:backend": "cross-env NODE_ENV=test node server/index.js",
    "drill:e2e": "playwright test tests/e2e-pipeline.spec.js --headed"
  },
  "dependencies": {
    "@google/genai": "latest",
    "idb": "^8.0.0",
    "lucide-react": "^0.554.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-markdown": "^10.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.58.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/chrome": "^0.1.36",
    "@types/k6": "^1.6.0",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.17",
    "baseline-browser-mapping": "^2.9.18",
    "cross-env": "^7.0.3",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "glob": "^10.4.5",
    "jsdom": "^27.4.0",
    "playwright": "^1.58.2",
    "puppeteer": "^24.37.5",
    "terser": "^5.46.0",
    "typescript": "~5.8.2",
    "typescript-eslint": "^8.52.0",
    "vite": "^6.2.0",
    "vitest": "^4.0.17"
  }
}
